@page
@model MyApp.Namespace.NuevoContratoModel
@{
    ViewData["Title"] = "Nuevo Contrato";
}
<div class="container">
    <h1 class="display-4">Nuevo Contrato</h1>
    <p>* Campo obligatorio</p>
    <form method="post">
        <div class="form-group">
            <p>Codigo de contrato: *
                <input class="form-control" name="nombreObra" required maxlength="50" />
            </p>
        </div>
        <div class="form-group">
            <p>Persona a contratar: *
                <select class="form-control" name="idPersona" required>
                    <option value="" disabled selected >Seleccione una persona</option>
                    @foreach (var persona in Model.Personas)
                    {
                        <option value="@persona.Id">@persona.Nombre</option>
                    }
                </select>
            </p>
        </div>
        <div class="form-group">
            <p>Seleccione obra: *
                <select class="form-control" name="idObra" required>
                    <option value="" disabled selected>Seleccione una obra</option>
                    @foreach (var obra in Model.Obras)
                    {
                        <option value="@obra.Id">@obra.Nombre</option>
                    }
                </select>
            </p>
        </div>
        <div class="form-group">
            <p>Fecha de inicio: *
                <input class="form-control" type="date" name="fechaInicio" required />
            </p>
        </div>
        <div class="form-group">
            <p>Fecha de termino:
                <input class="form-control" type="date" name="fechaTermino"  />
            </p>
        </div>
        <div class="form-group">
            <p>¿Contrato Vigente?: *
                <select class="form-control" name="vigente" required>
                    <option value="true">Si</option>
                    <option value="false">No</option>
                </select>
            </p>
        </div>
        
        <button class="btn btn-primary" type="submit">Guardar</button>
    </form>
</div>
