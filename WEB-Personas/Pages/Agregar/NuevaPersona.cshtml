@page
@model MyApp.Namespace.NuevaPersonaModel
@{
    ViewData["Title"] = "Nueva Persona";
}
<h1>
    Nueva Persona
</h1>
<form method="post">
    <div class="form-group">
        <p>Nombre y apellido:
            <input class="form-control" name="Nombre" required maxlength="50" />
        </p>
    </div>
    <div class="form-group">
        <p>Rut:
            <input class="form-control" name="Rut" required maxlength="12" />
        </p>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
</form>
